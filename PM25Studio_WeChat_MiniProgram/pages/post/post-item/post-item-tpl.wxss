.post-container{
  display: flex;
  flex-direction: column;
  padding-top:15rpx;
  margin-bottom:30rpx;
  background-color:#fff;
}
.post-image{
  margin-top: 30rpx;
  width:100%;
  height:450rpx;
 
}
.post-author-date{
  display: flex;
  flex-direction: row;  
  align-items: center;
  
}

.post-author-date image{
box-shadow: 0px 2px 3px 0px #c0c0c0;
}

.post-author-date image{
  width:70rpx;
  height:70rpx;
  margin-left:20rpx;
   border-radius: 50%;
}
.post-author-date text{
  font-size:22rpx;
  margin-left: 40rpx;
}

.post-title{
  font-size:40rpx;
  font-weight: bold;
  margin-left: 80rpx;
  margin-bottom: 15rpx;
}

.post-content{
  font-size:26rpx;
  margin-bottom: 20rpx;
  margin-left:10rpx;
  letter-spacing: 2rpx;
  line-height: 2em;
}

.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.post-like image{
  width: 50rpx;
  height: 50rpx;
  margin-left:20rpx;
}

.post-like text{
   margin-left:20rpx;
   margin-right:30rpx;
}