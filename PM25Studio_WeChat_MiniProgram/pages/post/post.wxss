/* pages/post/post.wxss */
@import "post-item/post-item-tpl.wxss";
page{
  background-color: #ddd;
}
swiper{
  width: 100%;
  height: 400rpx;
  margin: 2px 0px 20px 0px;
}

swiper-item image{
  width: 100%;
  height: 400rpx;
}


/* 预约 */
.container {
  width: 100%;
  flex-direction: column;
  display: flex;
  align-items: center;
}


.care-container {
  position: relative;
  top: 5px;
  padding-left: 10px;
  margin-bottom: 30px;
  width: 100%;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0px 2px 6px 0px #d3d2d2;
}

.order {
  /* font-size:large; */
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  top: 3px;
  margin-left: 30px;
  padding-right: 20px;
}



.detail-item {
  display: flex;
  height: 105rpx;
  align-items: center;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 8px;
  margin-left: 5px;
}

.detail-item text {
  color: #7f8389;
  font-size: 32rpx;
  flex: 1;
  margin-left: 10rpx;
  margin-right: 50px;
}
