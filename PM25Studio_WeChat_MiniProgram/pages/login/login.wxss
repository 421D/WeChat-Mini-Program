/* pages/login/login.wxss */

.top_img {
  width: 100%;
  z-index: 1;
  height: 450rpx;
}

.container {
  background-color: #efeff4;
  width: 100%;
  flex-direction: column;
  display: flex;
  align-items: center;
}

.category-box {
  width: 100%;
  height: 250rpx;
  float: left;
}

.category-item {
  width: 660rpx;
  margin: 100rpx 0;
}

.category-item1 {
  width: 660rpx;
  height: 430rpx;
  margin: 100rpx 0;
  padding-left:40rpx;
  border-radius: 3px;
  box-shadow: 0px 2px 8px 2px #ddd;
}

.category-item.personal-info {
  margin: auto;
  height: 350rpx;
  border-radius: 5px;
  margin-top: -480rpx;
  /* border: 1px solid rgba(217, 217, 217, 0.4); */
}

.category-item.personal-info .user-avatar {
  padding-top: 1px;
  margin: 80rpx 30rpx;
  width: 130rpx;
  height: 130rpx;
  position: relative;
}

.avatar {
  width: 100%;
  height: 100%;
  margin: 80rpx 80rpx 0 50rpx;
  border-radius: 50%;
  overflow: hidden;
  display: block;
  border: #fff 1px solid;
}

.category-item.category-item.personal-info .user-name {
  margin: -80rpx 0 0 260rpx;
  flex: 1;
}

/*列表*/

.detail-item {
  display: flex;
  height: 105rpx;
  align-items: center;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 8px;
  margin-left: -10px;
}

.detail-item text {
  color: #7f8389;
  font-size: 32rpx;
  flex: 1;
  width: 150rpx;
  margin-left: 10rpx;
  margin-right: 50px;
}

.detail-item .detail-item-btn {
  width: 50rpx;
  color: #d9d9d9;
  height: 40rpx;
  margin-right: 20rpx;
  text-align: center;
}

.detail-item .detail-item-btn::after {
  display: inline-block;
  content: '';
  width: 16rpx;
  height: 16rpx;
  color: #d9d9d9;
  margin-top: 8rpx;
  border: 3rpx #d9d9d9 solid;
  border-top-color: transparent;
  border-left-color: transparent;
  transform: rotate(-45deg);
}

/* 预约*/


.care-container {
  position: relative;
  top: -25px;
  padding-left: 10px;
  margin-bottom: -90rpx;
  width: 280px;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-bottom: none;
  border-radius: 7px;
  box-shadow: 0px 2px 6px 0px #d3d2d2;
}

.order {
 font-size:large; 
  width: 550rpx;
  border-radius: 40%;
  display: flex;
  align-items: center;
  position: relative;
  top: 3px;
  margin-left: 20px;
  padding-right: 20px;
} 